{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Edit",
      "Bash(find:*)",
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(npm test*)",
      "Bash(npm run test*)",
      "Bash(npm run build*)",
      "Bash(npm run lint*)",
      "Bash(yarn test*)",
      "Bash(yarn build*)",
      "Bash(pnpm test*)",
      "Bash(pnpm build*)",
      "Bash(python*)",
      "Bash(node*)",
      "Bash(pytest*)",
      "Bash(cargo test*)",
      "Bash(cargo build*)",
      "Bash(go test*)",
      "Bash(go build*)",
      "Bash(ls*)",
      "Bash(pwd)",
      "Bash(cat*)",
      "Bash(head*)",
      "Bash(tail*)",
      "Bash(wc*)"
    ],
    "deny": [
      "Bash(rm -rf*)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Bash(sudo*)",
      "Bash(curl* | bash)",
      "Bash(wget* | sh)"
    ],
    "ask": [
      "Write",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(npm install*)",
      "Bash(yarn add*)",
      "Bash(pnpm add*)",
      "Bash(pip install*)",
      "Bash(cargo install*)"
    ]
  },
  "experimental": {
    "planMode": {
      "enabled": true,
      "autoEnter": false
    }
  },
  "hooks": {
    "PostToolUse": ".claude/hooks/post-edit.sh"
  }
}
